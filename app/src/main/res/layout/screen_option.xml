<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".ui.screens.LevelScreen">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/easy"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/dialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnEasy"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:text="@string/about"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:fontFamily="@font/amita"
        app:layout_constraintBottom_toBottomOf="@id/easy"
        app:layout_constraintLeft_toLeftOf="@id/easy"
        app:layout_constraintRight_toRightOf="@id/easy"
        app:layout_constraintTop_toTopOf="@id/easy" />


</androidx.constraintlayout.widget.ConstraintLayout>